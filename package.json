{
  "name": "deploy-cloudrun",
  "version": "1.0.1",
  "description": "Github Action: Deploy to Google Cloud Run",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist/ && ncc build -m src/main.ts -o dist/main",
    "lint": "eslint src/ tests/ --ext .ts,.tsx",
    "format": "eslint src/ tests/ --ext .ts,.tsx --fix",
    "test": "mocha -r ts-node/register -t 150s 'tests/unit/*.test.ts' --exit",
    "e2e-tests": "mocha -r ts-node/register -t 150s 'tests/e2e.test.ts' --exit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/google-github-actions/deploy-cloudrun.git"
  },
  "keywords": [
    "actions",
    "google",
    "cloud run",
    "cloud",
    "run",
    "containers"
  ],
  "author": "Google LLC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/google-github-actions/deploy-cloudrun/issues"
  },
  "homepage": "https://github.com/google-github-actions/deploy-cloudrun#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1",
    "@google-github-actions/actions-utils": "^0.4.7",
    "@google-github-actions/setup-cloud-sdk": "^1.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.3",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vercel/ncc": "^0.36.1",
    "chai": "^4.3.7",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "googleapis": "^116.0.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "sinon": "^15.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "yaml": "^2.2.1"
  }
}
